
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= cheese.name %></span>
        <p><% cheese.description %></p>
      </div>
      <div class="card-action">
        <%= link_to "Favorite", "/cheeses/#{cheese.id}/favorite", method: :post %>
        <%= link_to "Total Faves: #{cheese.fave_count}", "/cheeses/#{cheese.id}" %>
      </div>
    </div>
  </div>
</div>
